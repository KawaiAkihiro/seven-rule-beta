<% end %>
<li>
    <div class="notice">
        <%= link_to "通知", notices_path%>
        <div class="number">
            <span><%= current_master.notices.count %></span>
        </div>
    <div>
</li> <br><br><br>
<li>
    <%= link_to "ログアウト", logout_path, {:method=> :post, class:"logout"} %>
</li>  
<div class="line"></div>
<li>
    <div class="form-group">
        <p>urlを従業員に共有しましょう</p>
        <input class="border border-info rounded text-secondary form-control " id="CopyTarget" 
            type="text" value="http://localhost:3000/masters/<%= current_master.id%>/login" readonly>
        <div class="copy">
            <button type="button" class="btn btn-info " id="copy" data-toggle="tooltip" data-placement="top" title="コピーする">
                <i class="fas fa-clipboard"></i>
            </button>
            <p>←こちらをクリック</p>
        </div>
    </div>
</li>   